        <referenceBlock name="sales.order.history" >
            <arguments>
                <argument name="historyViewModel" xsi:type="object">ImaginationMedia\CurbsidePickup\ViewModel\OrderHistory</argument>
                <argument name="template" xsi:type="string">ImaginationMedia_CurbsidePickup::order/history.phtml</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
