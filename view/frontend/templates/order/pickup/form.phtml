        <div class="field note" data-container="note">
            <label class="label" for="note">
                <span><?= $escaper->escapeHtml(__('Note:')) ?></span>
            </label>
            <div class="control">
                <?php if ($editMode): ?>
                    <textarea type="text"
                          maxlength="300"
                          rows="4"
                          cols="10"
                          class="input-text"
                          name="note" autocomplete="off">
                            <?= $curbsideData->getNote() ?>
                    </textarea>
                <?php else: ?>
                <p><?= $escaper->escapeHtml($curbsideData->getCarColor()) ?></p>
                <?php endif; ?>
            </div>
        </div>
    </fieldset>

