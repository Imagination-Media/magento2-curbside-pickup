$deliveryTime = $block->formatDate($order->getCurbsideDeliveryTime(), \IntlDateFormatter::MEDIUM, true);
?>

<tr>
    <th><?= $escaper->escapeHtml(__('Curbside Delivery Time')) ?></th>
