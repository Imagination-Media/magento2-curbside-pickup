<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales" title="Sales" translate="title" sortOrder="20">
                    <resource id="ImaginationMedia_CurbsidePickup::curbside_order"  title="Curbside Orders" translate="title" sortOrder="15" >
                        <resource id="ImaginationMedia_CurbsidePickup::actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="ImaginationMedia_CurbsidePickup::modal_view" title="Modal View" translate="title" sortOrder="10" />
                            <resource id="ImaginationMedia_CurbsidePickup::actions_view" title="View" translate="title" sortOrder="20" />
                            <resource id="ImaginationMedia_CurbsidePickup::actions_ready" title="Ready" translate="title" sortOrder="25" />
                            <resource id="ImaginationMedia_CurbsidePickup::actions_accept" title="Accept" translate="title" sortOrder="30" />
                            <resource id="ImaginationMedia_CurbsidePickup::actions_deliver" title="Deliver" translate="title" sortOrder="35" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
